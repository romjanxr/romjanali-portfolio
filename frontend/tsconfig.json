{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      // Change this line:
      "@/*": ["./src/*"], // <-- THIS IS THE CRUCIAL CHANGE
      // You might also want to add more specific aliases for clarity,
      // but "@/components/*": ["./src/components/*"] etc. will be inferred
      // by shadcn based on "@/components" and "src/components" configuration.
      // For now, just fix "@/":
      "@/components/*": ["./src/components/*"],
      "@/data/*": ["./src/data/*"],
      "@/types/*": ["./src/types/*"],
      "@/styles/*": ["./src/styles/*"] // Example for styles if you have them
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
